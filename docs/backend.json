{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile data.",
      "type": "object",
      "properties": {
        "username": { "type": "string", "description": "The user's public display name." },
        "totalxp": { "type": "number", "description": "User's all-time experience points." },
        "weeklyxp": { "type": "number", "description": "User's experience points for the current week." },
        "streak": { "type": "number", "description": "User's current daily study streak." },
        "highestStreak": { "type": "number", "description": "User's all-time highest daily study streak." },
        "joinedat": { "type": "string", "format": "date-time", "description": "Timestamp when the user joined." },
        "lastactive": { "type": "string", "format": "date-time", "description": "Timestamp of the user's last activity." },
        "onboardingComplete": { "type": "boolean", "description": "Flag indicating if the user has completed the onboarding flow." }
      },
      "required": ["username", "totalxp", "weeklyxp", "streak", "highestStreak", "joinedat", "lastactive", "onboardingComplete"]
    },
    "Username": {
      "title": "Username Registry",
      "description": "Ensures unique usernames.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The UID of the user who owns this username." }
      },
      "required": ["uid"]
    }
  },
  "auth": {
    "providers": ["emailpassword"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "Stores user profile data. The document ID is the user's UID."
    },
    "/usernames/{username}": {
      "schema": { "$ref": "#/backend/entities/Username" },
      "description": "A registry to ensure unique usernames. The document ID is the lowercase username."
    },
     "/quizzes/{quizId}": {
      "schema": {
        "$ref": "#/backend/entities/Quiz"
      },
      "description": "Stores quiz metadata."
    },
    "/quizzes/{quizId}/questions/{questionId}": {
      "schema": {
        "$ref": "#/backend/entities/Question"
      },
      "description": "Stores the questions for a specific quiz."
    }
  }
}
