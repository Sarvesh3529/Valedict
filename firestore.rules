rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Collection Rules
    match /onboardingResponses/{userId} {
      // READ: Only the owner can read their own response document.
      allow get: if isOwner(userId);
      allow list: if false;

      // WRITE: Owner can create and update, but not delete.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    match /users/{userId} {
      // READ: Only the owner can read their own profile.
      // NOTE: This will break the leaderboard feature, which requires listing multiple users.
      // We can relax this rule later if the leaderboard is a priority.
      allow get: if isOwner(userId);
      allow list: if false;

      // WRITE: Only the owner can create or update their own profile.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    match /quizzes/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
